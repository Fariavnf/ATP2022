import random


def jogo():
    min = 0
    max = 100
    tentativas = 0

    print("Escolha modo de jogo:")
    print("1 - Adivinhar numero")
    print("2 - Escolher numero")

    while True:
        modo = input()

        if modo == '1' or modo == '2':
            break
        else:
            print("Modo de jogo inválido, volte a escolher:")
            continue

    resultado = False

    if modo == '1':
        numero = random.randint(min, max)

        while not resultado:

            while True:
                try:
                    print(f"Escolha um numero de {min} a {max}")
                    numPlayer = int(input())
                except ValueError:
                    print(f"Numero inválido, escolha um numero de {min} a {max}")
                    continue

                if numPlayer < min or numPlayer > max:
                    print(f"Numero inválido, escolha um numero de {min} a {max}")
                    continue
                else:
                    break

            tentativas += 1

            if numero == numPlayer:
                print(f"Acertou no numero {numero} e demorou tentativas {tentativas}")
                resultado = True

            elif numero > numPlayer:
                print(f"O numero {numPlayer} é pequeno")

            else:
                print(f"O numero {numPlayer} é grande")

            print("")

    if modo == '2':
        print(f"Escolha um numero de {min} a {max}")

        while True:
            try:
                numero = int(input("Numero:"))
            except ValueError:
                print(f"Numero inválido, escolha um numero de {min} a {max}")
                continue

            if numero < min or numero > max:
                print(f"Numero inválido, escolha um numero de {min} a {max}")
                continue
            else:
                break

        while not resultado:
            guess = (max + min) // 2

            print(f"O numero certo é {guess} ?")
            print("")
            print("Resposta:")
            print("-1 é menor")
            print("0 é igual")
            print("1 é maior")
            resposta = int(input())

            if resposta == 0:
                tentativas += 1
                resultado = True
                print(f"Acertou no numero {guess} e demorou {tentativas} tentativas")

            elif resposta == -1:
                tentativas += 1
                max = guess

            elif resposta == 1:
                tentativas += 1
                min = guess

            else:
                print("Input inválido")

            print("")


jogo()
